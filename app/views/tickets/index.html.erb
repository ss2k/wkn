<h1>Your Tickets</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Ticket Name</th>
        <th>Description</th>
        <th>Submitted</th>
        <th>Resolved</th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.subject, user_ticket_path(@user, ticket) %></td>
        <td><%= ticket.description[0,10] %></td>
        <td><%= ticket.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= "Yes" if ticket.resolved? || "No" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>