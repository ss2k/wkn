<!DOCTYPE html>
<html>
<head>
  <title>Wifi-K9</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">
  <%= render 'layouts/navigation' if user_signed_in? %>
  <% viewable_flash.each do |key, value| %>
    <%= content_tag :div, value, :class => "alert alert-#{key}" if value.present? %>
  <% end %>
  <%= yield %>
</div>
</body>
</html>

