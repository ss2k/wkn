<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield :page_title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">
  <% viewable_flash.each do |key, value| %>
    <%= content_tag :div, value, :class => "alert alert-#{key}" if value.present? %>
  <% end %>
  <h2 data-role="page-title"><%= yield :page_title %></h2>
  <hr />
  <%= yield %>
</div>
</body>
</html>

